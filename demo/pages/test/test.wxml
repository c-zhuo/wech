<import src="../../widget/component/component_1.wxml" />
<import src="../../widget/component/component_2.wxml" />

<view class="root">
	<view class="block">
		Welcome
	</view>

	<view class="block">
		Root Data: {{ rootData }}
	</view>

	<view class="block">
		<template is="component1" data="{{...child1}}"></template>
	</view>

	<view class="block block-click" bindtap="passToChild_Plus">
		传递给组件1的passToChild值为: {{ passToChild }}，点击自增
	</view>

	<view class="block block-line"></view>

	<view class="block">
		<template is="component2" data="{{...child2}}"></template>
	</view>

	<view class="block block-click" bindtap="passToGrandson_Plus">
		传递给组件2的passToGrandson值为: {{ passToGrandson }}，点击自增
	</view>

</view>